<Window x:Class="lab8_WPF_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8_WPF_APP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File" IsEnabled="True" Click="MenuItem_Click">
                <MenuItem Header="_Exit"/>
                <MenuItem Header="_Open" Click="Open"/>
            </MenuItem>
        </Menu>
        <TreeView Grid.Row="1" x:Name="treeView" Width="auto" AllowDrop="True">

        </TreeView>
        <TextBlock x:Name="FileViewer" HorizontalAlignment="Right" Margin="393,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="406" Height="416" RenderTransformOrigin="1.328,0.512"/>
    </Grid>

</Window>
